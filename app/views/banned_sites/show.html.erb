<%- model_class = BannedSite -%>
<div class="page-header">
  <h1><%=t '.title', :default => BannedSite %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:banned_on) %></dt>
      <dd><pre class="prettyprint"><%= @banned_site.banned_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:domain) %></dt>
      <dd><pre class="prettyprint"><%= @banned_site.domain %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reason) %></dt>
      <dd><pre class="prettyprint"><%= @banned_site.reason %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              banned_sites_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_banned_site_path(@banned_site), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              banned_site_path(@banned_site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

