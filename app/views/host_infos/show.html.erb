<%- model_class = HostInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => HostInfo %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ip) %></dt>
      <dd><pre class="prettyprint"><%= @host_info.ip %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:domain) %></dt>
      <dd><pre class="prettyprint"><%= @host_info.domain %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @host_info.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ping) %></dt>
      <dd><pre class="prettyprint"><%= @host_info.ping %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:blacklisted) %></dt>
      <dd><pre class="prettyprint"><%= @host_info.blacklisted %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:blacklisted_on) %></dt>
      <dd><pre class="prettyprint"><%= @host_info.blacklisted_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:checked_at) %></dt>
      <dd><pre class="prettyprint"><%= @host_info.checked_at %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              host_infos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_host_info_path(@host_info), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              host_info_path(@host_info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

