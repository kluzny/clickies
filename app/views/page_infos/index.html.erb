<%- model_class = PageInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => PageInfo %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:nsfw) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @page_infos.each do |page_info| %>
      <tr>
        <td><%= page_info.id %></td>
        <td><%= page_info.title %></td>
        <td><%= page_info.nsfw %></td>
        <td><%=l page_info.created_at, format: :long %></td>
        <td>
          <%= link_to page_info_path(page_info), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to page_info_path(page_info), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_page_info_path,
            :class => 'btn btn-primary' %>
